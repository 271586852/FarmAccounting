.calendar-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.calendar-container {
  background-color: #fff;
  border-radius: 20rpx;
  width: 90%;
  max-width: 700rpx;
  padding: 30rpx;
  box-shadow: 0 10rpx 40rpx rgba(0, 0, 0, 0.2);
}

.calendar-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.calendar-nav {
  display: flex;
  align-items: center;
  gap: 30rpx;
}

.nav-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  color: #1aad19;
  font-weight: bold;
  border-radius: 50%;
  background-color: #f0f9f0;
}

.calendar-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.calendar-close {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 50rpx;
  color: #999;
  border-radius: 50%;
  background-color: #f5f5f5;
}

.calendar-weekdays {
  display: flex;
  margin-bottom: 20rpx;
}

.weekday-item {
  flex: 1;
  text-align: center;
  font-size: 24rpx;
  color: #999;
  font-weight: 500;
  padding: 10rpx 0;
}

.calendar-days {
  display: flex;
  flex-wrap: wrap;
}

.day-item {
  width: calc(100% / 7);
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #333;
  position: relative;
  border-radius: 8rpx;
  margin: 4rpx;
  box-sizing: border-box;
}

.day-item.other-month {
  color: #ccc;
}

.day-item.today {
  background-color: #e8f5e9;
  color: #1aad19;
  font-weight: bold;
}

.day-item.selected {
  background-color: #1aad19;
  color: #fff;
  font-weight: bold;
}

.day-item.selected.today {
  background-color: #0d8f0d;
  color: #fff;
}

