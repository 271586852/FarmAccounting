.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  background: #fff;
  display: flex;
  padding-bottom: env(safe-area-inset-bottom);
  border-top: 1rpx solid #e5e5e5;
  z-index: 1000;
}

.tab-bar-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  color: #7A7E83;
  position: relative;
}

.tab-bar-item.selected {
  color: #1aad19;
}

.tab-bar-item.selected .tab-svg {
  color: #1aad19;
}

.tab-bar-item:not(.selected) .tab-svg {
  color: #7A7E83;
}

.normal-tab {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.tab-icon {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 4rpx;
}

.icon-wrapper {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.icon-img {
  width: 100%;
  height: 100%;
}

.icon-text {
  font-size: 40rpx;
}

.tab-text {
  font-size: 20rpx;
}

/* 特殊的添加按钮 */
.special-add-btn {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  height: 100%;
  padding-top: 20rpx;
}

.add-icon-wrapper {
  position: relative;
  margin-bottom: 10rpx;
}

.add-icon {
  width: 100rpx;
  height: 100rpx;
  background: linear-gradient(135deg, #1aad19 0%, #0d8f0d 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 60rpx;
  font-weight: 300;
  line-height: 1;
  box-shadow: 0 8rpx 20rpx rgba(26, 173, 25, 0.4);
  position: relative;
  top: -40rpx;
}

.add-text {
  font-size: 20rpx;
  color: #1aad19;
  font-weight: 500;
  position: relative;
  top: -40rpx;
}

.tab-bar-item.selected .add-text {
  color: #1aad19;
}

