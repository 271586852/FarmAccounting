page {
  background-color: #f5f5f5;
  min-height: 100vh;
}

.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 140rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  box-sizing: border-box;
}

.date-header {
  background-color: #fff;
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.date-picker {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx;
  cursor: pointer;
  -webkit-tap-highlight-color: transparent;
}

.date-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.date-icon {
  width: 40rpx;
  height: 40rpx;
}

/* 统计信息栏 */
.statistics-bar {
  background-color: #fff;
  padding: 20rpx;
  margin: 0 20rpx 20rpx 20rpx;
  border-radius: 10rpx;
  display: flex;
  justify-content: space-between;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
  text-align: center;
}

.stat-label {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.stat-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #1aad19;
}

.records-list {
  padding: 0 20rpx 140rpx;
  display: flex;
  flex-direction: column;
  align-items: stretch;
  justify-content: flex-start;
  flex: 1;
  box-sizing: border-box;
}

.empty-tip {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  text-align: center;
  padding: 60rpx 0;
  color: #999;
  font-size: 28rpx;
  flex: 1;
}

.record-item {
  background-color: #fff;
  border-radius: 10rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  width: 100%;
  box-sizing: border-box;
}

.record-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.record-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 15rpx;
}

.record-left {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.record-index {
  min-width: 48rpx;
  height: 48rpx;
  padding: 0 12 0 12rpx;
  border-radius: 24rpx;
  background-color: transparent;
  color: #1aad19;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: bold;
}

.recorder-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #1aad19;
}

.record-time {
  font-size: 24rpx;
  color: #999;
}

.record-details {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
  font-size: 26rpx;
  color: #666;
}

.detail-row {
  display: flex;
  align-items: flex-start;
  line-height: 1.6;
}

.detail-label {
  color: #999;
  min-width: 100rpx;
  flex-shrink: 0;
}

.detail-value {
  color: #333;
  flex: 1;
}

.address-text {
  word-break: break-all;
}

.remark-text {
  color: #999;
  font-size: 24rpx;
}

.quantity-row {
  margin-top: 10rpx;
  padding-top: 10rpx;
  border-top: 1rpx solid #eee;
}

.quantity-item {
  background-color: #f0f9ff;
  color: #1aad19;
  padding: 6rpx 16rpx;
  border-radius: 6rpx;
  margin-right: 10rpx;
  font-weight: bold;
}

.delete-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 20rpx;
  transition: all 0.3s;
}

.delete-btn:active {
  transform: scale(0.95);
  opacity: 0.7;
}

.delete-icon {
  width: 40rpx;
  height: 40rpx;
}

/* 顶部操作按钮 */
.top-actions {
  display: flex;
  gap: 20rpx;
  padding: 0 20rpx ;
  box-sizing: border-box;
}

.action-btn {
  flex: 1;
  border-radius: 8rpx;
  font-size: 32rpx;
  font-weight: bold;
  padding: 24rpx 0;
  border: none;
}

.action-btn::after {
  border: none;
}

.primary-btn {
  background-color: #1aad19;
  color: #fff;
}

.clear-btn {
  background-color: #fff;
  color:rgb(51 , 51, 51);
  border: 2rpx solidrgb(180, 180, 180);
}

/* 弹窗样式 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  width: 90%;
  max-width: 600rpx;
  background-color: #fff;
  border-radius: 20rpx;
  overflow: hidden;
  max-height: 90vh;
  display: flex;
  flex-direction: column;
}

.modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.modal-close {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  color: #999;
  cursor: pointer;
}

.modal-body {
  padding: 30rpx;
  flex: 1;
  overflow-y: auto;
  max-height: 50vh;
}

.edit-body {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.form-item {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.form-row {
  display: flex;
  gap: 16rpx;
}

.form-item.small {
  flex: 1;
}

.form-label {
  font-size: 26rpx;
  color: #666;
}

.form-input {
  width: 100%;
  padding: 18rpx 20rpx; /* 垂直内边距保证输入框高度 */
  border: 2rpx solid #e0e0e0;
  border-radius: 10rpx;
  font-size: 28rpx;
  /* 关键修复：删除自定义line-height，或设为1.2-1.4（适配字体大小） */
  line-height: 1.2; 
  /* 新增：保证文字垂直对齐 */
  display: flex;
  align-items: center;
  /* 保留原有属性 */
  white-space: normal;
  word-break: break-all;
  box-sizing: border-box;
  background-color: #fafafa;
  /* 可选：固定最小高度，防止高度不足 */
  min-height: 72rpx; 
}

.form-textarea {
  width: 100%;
  padding: 18rpx 20rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 10rpx;
  font-size: 28rpx;
  line-height: 1.6;
  white-space: pre-wrap;
  word-break: break-all;
  box-sizing: border-box;
  background-color: #fafafa;
}



.paste-textarea {
  width: 100%;
  min-height: 300rpx;
  padding: 20rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 10rpx;
  font-size: 28rpx;
  line-height: 1.6;
  background-color: #fafafa;
  box-sizing: border-box;
}

.modal-tip {
  margin-top: 20rpx;
  padding: 20rpx;
  background-color: #f0f9ff;
  border-radius: 10rpx;
  font-size: 24rpx;
  color: #666;
  line-height: 1.6;
}

.modal-footer {
  display: flex;
  border-top: 1rpx solid #eee;
}

.modal-btn {
  flex: 1;
  padding: 30rpx;
  font-size: 32rpx;
  border: none;
  border-radius: 0;
  background-color: #fff;
}

.modal-btn::after {
  border: none;
}

.cancel-btn {
  color: #666;
  border-right: 1rpx solid #eee;
}

.confirm-btn {
  color: #1aad19;
  font-weight: bold;
}

