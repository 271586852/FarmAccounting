.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 120rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.date-header {
  background-color: #fff;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.date-picker {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx;
  cursor: pointer;
}

.date-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.date-icon {
  width: 40rpx;
  height: 40rpx;
}

.records-list {
  padding: 0 20rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: flex-start;
}

.empty-tip {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
  font-size: 28rpx;
}

.record-item {
  background-color: #fff;
  border-radius: 10rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  width: 100%;
  box-sizing: border-box;
}

.record-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.record-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 10rpx;
}

.record-type {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.record-time {
  font-size: 24rpx;
  color: #999;
}

.record-details {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  font-size: 26rpx;
  color: #666;
}

.record-details text {
  margin-right: 20rpx;
}

.delete-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 20rpx;
  transition: all 0.3s;
}

.delete-btn:active {
  transform: scale(0.95);
  opacity: 0.7;
}

.delete-icon {
  width: 40rpx;
  height: 40rpx;
}

