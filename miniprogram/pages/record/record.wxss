page {
  background-color: #f5f5f5;
  min-height: 100vh;
}

.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 120rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  box-sizing: border-box;
}

.date-header {
  background-color: #fff;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.date-picker {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx;
  cursor: pointer;
  -webkit-tap-highlight-color: transparent;
}

.date-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.date-icon {
  width: 40rpx;
  height: 40rpx;
}

.records-list {
  padding: 0 20rpx 200rpx;
  display: flex;
  flex-direction: column;
  align-items: stretch;
  justify-content: flex-start;
  flex: 1;
  box-sizing: border-box;
}

.empty-tip {
  display: flex;
  align-items: center;
  justify-content: center;
  flex: 1;
  width: 100%;
  text-align: center;
  padding: 60rpx 0;
  color: #999;
  font-size: 28rpx;
}

.record-item {
  background-color: #fff;
  border-radius: 10rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  width: 100%;
  box-sizing: border-box;
}

.record-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.record-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 10rpx;
}

.record-recorder {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.record-type {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.record-time {
  font-size: 24rpx;
  color: #999;
}

.record-details {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  font-size: 26rpx;
  color: #666;
}

.record-details text {
  margin-right: 20rpx;
  display: block;
  line-height: 1.6;
  word-break: break-all;
  white-space: pre-wrap;
}

/* 编辑弹窗 */
.edit-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.45);
  z-index: 1200;
}

.edit-modal {
  position: fixed;
  left: 40rpx;
  right: 40rpx;
  top: 80rpx;
  bottom: 260rpx;
  background: #fff;
  border-radius: 16rpx;
  z-index: 1300;
  display: flex;
  flex-direction: column;
  box-shadow: 0 16rpx 40rpx rgba(0, 0, 0, 0.12);
  overflow: hidden;
}

.edit-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 28rpx;
  font-size: 32rpx;
  font-weight: 600;
  border-bottom: 1rpx solid #f0f0f0;
}

.close-btn {
  width: 44rpx;
  height: 44rpx;
  text-align: center;
  line-height: 44rpx;
  font-size: 40rpx;
  color: #999;
}

.edit-body {
  flex: 1;
  min-height: 0; /* 允许内容区在弹窗内自由收缩以滚动 */
  padding: 20rpx 28rpx 8rpx;
  box-sizing: border-box;
}

.form-item {
  margin-bottom: 24rpx;
}

.form-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 12rpx;
  font-weight: 500;
  line-height: 1.5;
}

.options-container {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.option-item {
  padding: 14rpx 22rpx;
  background: #f6f6f6;
  border-radius: 10rpx;
  font-size: 26rpx;
  color: #333;
  border: 2rpx solid transparent;
  word-break: break-all;
}

.option-item.selected {
  background: #1aad19;
  color: #fff;
  border-color: #1aad19;
}

.input, .textarea {
  width: 100%;
  background: #f8f8f8;
  border-radius: 10rpx;
  padding: 22rpx 24rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  border: 2rpx solid #eaeaea;
  min-height: 76rpx; /* 提升单行输入高度 */
}

.textarea {
  min-height: 180rpx; /* 提升多行输入高度 */
  line-height: 1.6;
}

.edit-footer {
  display: flex;
  padding: 16rpx 24rpx 24rpx;
  gap: 16rpx;
  border-top: 1rpx solid #f0f0f0;
}

.cancel-btn, .save-btn {
  flex: 1;
  border-radius: 12rpx;
  font-size: 30rpx;
  padding: 20rpx 0;
}

.cancel-btn {
  background: #f6f6f6;
  color: #666;
}

.save-btn {
  background: #1aad19;
  color: #fff;
}

.delete-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 20rpx;
  transition: all 0.3s;
}

.delete-btn:active {
  transform: scale(0.95);
  opacity: 0.7;
}

.delete-icon {
  width: 40rpx;
  height: 40rpx;
}

