.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 120rpx;
}

/* 登录页面样式 */
.login-container {
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
  padding: 40rpx;
}

.login-form {
  width: 100%;
  max-width: 600rpx;
  background-color: #fff;
  border-radius: 10rpx;
  padding: 60rpx 40rpx;
  box-shadow: 0 2rpx 20rpx rgba(0, 0, 0, 0.1);
}

.login-title {
  font-size: 40rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 60rpx;
  color: #333;
}

.form-item {
  margin-bottom: 40rpx;
}

.input {
  width: 100%;
  padding: 24rpx;
  background-color: #f8f8f8;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.login-btn {
  width: 100%;
  background-color: #1aad19;
  color: #fff;
  border-radius: 8rpx;
  font-size: 32rpx;
  padding: 24rpx;
  margin-top: 40rpx;
}

.login-btn::after {
  border: none;
}

/* 统计页面样式 */
.statistics-container {
  padding: 20rpx;
}

.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background-color: #fff;
  padding: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.date-picker {
  display: flex;
  align-items: center;
  gap: 10rpx;
  cursor: pointer;
}

.date-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.date-icon {
  width: 40rpx;
  height: 40rpx;
}

.logout-btn {
  padding: 10rpx 20rpx;
  background-color: #ff4444;
  color: #fff;
  border-radius: 8rpx;
  font-size: 26rpx;
}

.stats-overview {
  display: flex;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.stat-card {
  flex: 1;
  background-color: #fff;
  border-radius: 10rpx;
  padding: 30rpx;
  text-align: center;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.stat-label {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.stat-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #1aad19;
}

.type-stats {
  background-color: #fff;
  border-radius: 10rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.empty-tip {
  text-align: center;
  padding: 40rpx 0;
  color: #999;
  font-size: 26rpx;
}

.type-stat-item {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.type-stat-item:last-child {
  border-bottom: none;
}

.type-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.type-details {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  font-size: 24rpx;
  color: #666;
}

.records-section {
  background-color: #fff;
  border-radius: 10rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.record-item {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.record-item:last-child {
  border-bottom: none;
}

.record-type {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.record-details {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  font-size: 24rpx;
  color: #666;
}

